<!-- Page Content -->
  <div class="container">

    <div class="row">

        <!-- Blog Entries Column -->
        <div class="col-md-8">

            <h1 class="page-header">
              <img src="/images/logo.png" />
            </h1>

            <!-- First Blog Post -->
            <h2>
              <% for entry in @entries %>
                  <%= entry.title %>
            </h2>
            <p class="lead">
                by <%= entry.nick %>
            </p>
            <p><%= entry.category %></p>
            <p><span class="glyphicon glyphicon-time"></span> Posted on <%= entry.created_at %></p>
            <hr>
            <img class="img-responsive" src=<%= link_to image_tag(entry.image(:normal)), @entry.image.url%>
            <hr>
            <p><%= entry.contents %></p>
            <%= link_to ('Read More <span class="glyphicon glyphicon-chevron-right"></span>').html_safe, entry_path(entry.id), :class => "btn btn-primary" %>
              <% end %>
            <hr>

            <!-- Pager -->
            <ul class="pager">
                <li class="previous">
                    <a href="#">&larr; Older</a>
                </li>
                <li class="next">
                    <a href="#">Newer &rarr;</a>
                </li>
            </ul>

        </div>

        <!-- Blog Sidebar Widgets Column -->
        <div class="col-md-4">

            <!-- Blog Search Well -->
            <div class="well">
                <h4>Blog Search</h4>
                <div class="input-group">
                      <%= form_tag(entries_path, :method => "get", id: "search-form") do %>
                          <%= text_field_tag :search, params[:search], placeholder: "Search Posts" %>
                          <%= submit_tag "Search" %>
                      <% end %>
                </div>
                <!-- /.input-group -->
            </div>

            <!-- Blog Categories Well -->
            <div class="well">
                <h4>Blog Categories</h4>
                <div class="row">
                    <div class="col-lg-6">
                        <ul class="list-unstyled">
                          <li><%= link_to "Music", entries_path(:category=>"Music")%></li>
                          <li><%= link_to "Travel", entries_path(:category=>"Travel")%></li>
                          <li><%= link_to "Design", entries_path(:category=>"Design")%></li>
                          <li><%= link_to "Food", entries_path(:category=>"Food")%></li>
                        </ul>
                    </div>
                    <!-- /.col-lg-6 -->
                    <div class="col-lg-6">
                        <ul class="list-unstyled">
                          <li><%= link_to "Movie", entries_path(:category=>"Movie")%></li>
                          <li><%= link_to "Technology", entries_path(:category=>"Technology")%></li>
                          <li><%= link_to "Hobby", entries_path(:category=>"Hobby")%></li>
                          <li><%= link_to "Other", entries_path(:category=>"Other")%></li>
                        </ul>
                    </div>
                    <!-- /.col-lg-6 -->
                </div>
                <!-- /.row -->
            </div>

            <!-- Side Widget Well -->
            <div class="well">
                <h4>Side Widget Well</h4>
                <p>text</p>
            </div>

        </div>

    </div>
    <!-- /.row -->

    <hr>

    <!-- Footer -->
    <footer>
        <div class="row">
            <div class="col-lg-12">
                <p>Copyright &copy; K.O Website 2016</p>
            </div>
            <!-- /.col-lg-12 -->
        </div>
        <!-- /.row -->
    </footer>

</div>
<!-- /.container -->
