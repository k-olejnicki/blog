<%= simple_form_for(@comment) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :nick %>
    <%= f.input :contents %>
    <%= f.hidden_field :entry_id, as: :search, data:
        {autocomplete_source: Comment.pluck(:entry_id)} %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>